        {
          "title": "Gizlilik & Onay",
          "fields": [
            {
              "name": "privacyConsent",
              "type": "checkbox",
              "label": "Kişisel verilerim KVKK'ya göre işlenebilir",
              "required": true
            },
            {
              "name": "termsConsent",
              "type": "checkbox",
              "label": "Kullanım Şartlarını okudum ve kabul ediyorum",
              "required": true
            },
            {
              "name": "newsletter",
              "type": "checkbox",
              "label": "Yeni etkinlikler ve haberler hakkında bana e-posta gönderin",
              "required": false
            }
          ]
        }
      ],
      "submitButton": "Kaydoldu",
      "successMessage": "Kaydınız tamamlandı! Hoş geldiniz! Platform üzerinde keşfetmeye başlayabilirsiniz.",
      "errorMessage": "Lütfen tüm gerekli alanları doldurunuz."
